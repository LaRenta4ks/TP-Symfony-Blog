{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <article>
        <h1>{{ article.title }}</h1>
        {% if article.isPremium %}
            <span class="badge bg-warning">Premium</span>
        {% endif %}
        <p class="text-muted">Par {{ article.author }} le {{ article.createdAt|date('d/m/Y') }}</p>
        <div class="mt-4">
            {{ article.content|raw }}
        </div>
    </article>
    
    <div class="mt-4">
        <a href="{{ path('app_article_all') }}" class="btn btn-secondary">Retour à la liste</a>
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
{% endblock %}