{% extends 'base.html.twig' %}

{% block title %}Tous les articles{% endblock %}

{% block body %}
    <h1>Tous les articles</h1>

    <div class="row">
        {% for article in articles %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content|slice(0, 100) }}...</p>
                        {% if article.isPremium %}
                            <span class="badge bg-warning">Premium</span>
                        {% endif %}
                        <p class="text-muted">Par {{ article.author }} le {{ article.createdAt|date('d/m/Y') }}</p>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour Ã  l'accueil</a>
    </div>
{% endblock %}