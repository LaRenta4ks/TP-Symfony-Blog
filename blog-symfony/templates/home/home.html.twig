{% extends 'base.html.twig' %}

{% block title %}Accueil du Blog{% endblock %}

{% block body %}
    <h1>Bienvenue sur notre Blog</h1>

    <h2>Derniers articles</h2>
    <div class="row">
        {% for article in latest_articles %}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content|slice(0, 100) }}...</p>
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-primary">Lire plus</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="mt-4">
        <h3>S'inscrire Ã  la newsletter</h3>
        <form action="#" method="POST" class="newsletter-form">
            <div class="input-group mb-3">
                <input type="email" class="form-control" placeholder="Votre adresse email" aria-label="Votre adresse email" aria-describedby="button-newsletter" required>
                <button class="btn btn-primary" type="submit" id="button-newsletter">S'inscrire</button>
            </div>
        </form>
    </div>

    <div class="mt-4">
        <a href="{{ path('app_article_all') }}" class="btn btn-lg btn-primary">Voir tous les articles</a>
    </div>

    <div class="mt-4">
        <a href="#" class="btn btn-lg btn-success">Devenir membre premium</a>
    </div>
{% endblock %}